<section class="container">
    <div class="columns">
        <div class="column <%if (page.toc == undefined ? true:page.toc) {%> two-thirds <%} else {%> single-column <%}%>" >
            <article class="article-content markdown-body">
                <%- post.content %>
            </article>

            <% if (theme.share) {%>
                <div class="share">
                    <%- partial('_widget/sns-share',{page: page}) %>
                </div>    
            <% }%>

            <%if (theme.disqus_username) {%>
                <%- partial('_widget/disqus-comments',{
                    key: post.slug,
                    title: post.title,
                    url: config.url+url_for(post.path)
                }) %>
             <%} else if (theme.gitment_owner) {%>
                <%- partial('_widget/gitment-comments',{
                    key: post.slug,
                    title: post.title,
                    url: url_for(post.path)
                }) %>
            <% }%>

        </div>

        <div class="column one-third">
            <%- partial('_widget/sidebar') %>
        </div>
    </div>
</section>